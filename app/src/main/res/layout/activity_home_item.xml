<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/standard_margin"
    android:paddingVertical="@dimen/list_margin">

    <TextView
        android:id="@+id/text_title_longForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acronym"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_longForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_margin"
        app:layout_constraintStart_toEndOf="@id/text_title_longForm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/frequency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_longForm" />

    <TextView
        android:id="@+id/text_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_margin"
        app:layout_constraintStart_toEndOf="@+id/text_title_frequency"
        app:layout_constraintTop_toBottomOf="@id/text_longForm" />

    <TextView
        android:id="@+id/text_title_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/since"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_frequency" />

    <TextView
        android:id="@+id/text_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_margin"
        app:layout_constraintStart_toEndOf="@+id/text_title_since"
        app:layout_constraintTop_toBottomOf="@id/text_frequency" />

</androidx.constraintlayout.widget.ConstraintLayout>